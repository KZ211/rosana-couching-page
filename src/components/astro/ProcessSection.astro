---
const processSteps = [
  {
    number: "01",
    title: "Primer contacto",
    description:
      "Conversación inicial para identificar tus objetivos y áreas de desarrollo.",
  },
  {
    number: "02",
    title: "Sesión diagnóstico",
    description:
      "Evaluamos tu situación actual y definimos el camino de transformación.",
  },
  {
    number: "03",
    title: "Sesiones de coaching",
    description:
      "Trabajamos en desarrollar nuevas competencias y formas de observar.",
  },
  {
    number: "04",
    title: "Cierre y evaluación",
    description:
      "Evaluamos resultados y consolidamos aprendizajes para el futuro.",
  },
];
---

<div class="process-container scale-75 origin-top">
  <div class="relative px-4">
    {/* Línea conectora */}
    <div
      class="absolute left-[21px] md:left-1/2 top-0 bottom-0 w-0.5 bg-[#4A4558]/30 hidden sm:block"
    >
    </div>

    {/* Pasos */}
    <div class="space-y-4 sm:space-y-8 relative">
      {
        processSteps.map((step, index) => (
          <div class={`flex flex-col sm:flex-row items-start gap-2`}>
            <div
              class={`flex-none ${index % 2 === 0 ? "md:text-right md:order-first" : "md:text-left md:order-last"} w-full md:w-1/2 p-2`}
            >
              {/* Número del paso (versión desktop) */}
              <div class="hidden sm:block">
                <div
                  class={`h-7 w-7 rounded-full bg-[#4A4558] flex items-center justify-center text-[#F8F8F5] text-sm font-medium absolute ${index % 2 === 0 ? "md:right-[calc(50%-14px)]" : "md:left-[calc(50%-14px)]"} transform -translate-x-1/2 sm:translate-x-0`}
                >
                  {step.number}
                </div>
              </div>

              <div
                class={`sm:max-w-md ${index % 2 === 0 ? "md:ml-auto" : "md:mr-auto"}`}
              >
                {/* Número y título (versión móvil) */}
                <div class="flex items-center sm:hidden mb-1">
                  <div class="h-6 w-6 rounded-full bg-[#4A4558] flex items-center justify-center text-[#F8F8F5] text-xs font-medium mr-2">
                    {step.number}
                  </div>
                  <h3 class="font-belleza text-base text-[#4A4558]">
                    {step.title}
                  </h3>
                </div>

                {/* Título (versión desktop) */}
                <h3 class="font-belleza text-base text-[#4A4558] hidden sm:block mb-1">
                  {step.title}
                </h3>

                {/* Descripción */}
                <p class="text-xs text-[#4A4558]/70">{step.description}</p>
              </div>
            </div>
            {index % 2 !== 0 && <div class="hidden md:block md:w-1/2" />}
          </div>
        ))
      }
    </div>
  </div>
</div>

<style>
  .process-container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
  }
</style>
